@model MovieActor

@{
    ViewData["Title"] = "Update MovieActor Relation";
}
<div class="row text">
    <div class="col-md-8 offset-2">

        <div class="row">
            <div class="col-md-8 offset-4">

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <p>
                        <h1>Update Relation of Movie and Actor</h1>
                    </p>
                    <div class="form-group">
                        <label asp-for="MovieId" class="control-label"></label>
                        <input asp-for="MovieId" class="form-control" />
                        <span asp-validation-for="MovieId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorId" class="control-label"></label>
                        <input asp-for="ActorId" class="form-control" />
                        <span asp-validation-for="ActorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" asp-action="Edit" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All Relations</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>