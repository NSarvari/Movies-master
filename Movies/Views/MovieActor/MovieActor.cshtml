@model IEnumerable<MovieActor>

@{
    ViewData["Title"] = "List of Movie-Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.MovieId)</th>
                    <th>@Html.DisplayNameFor(model => model.ActorId)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MovieId)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ActorId)

                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"  asp-action="Edit" asp-route-id="@item.MovieId">
                                <i class="bi bi-pencil-square">
                                </i>Edit
                            </a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-controller="MovieActor" asp-action="Create" class="btn btn-outline-success">Add New MovieActor Relation</a>

</div>
