@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.MovieCategory)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.ImageUrl"
                             alt="@item.Name" style="max-width:150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.MovieCategory)

                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Price)

                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)

                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.StartDate)

                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.EndDate)

                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.MovieId">
                            <i class="bi bi-pencil-square"></i>Details
                        </a>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.MovieId">
                            <i class="bi bi-pencil-square">
                            </i>Edit
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MovieId"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-controller="Movie" asp-action="Create" class="btn btn-outline-success">Add New Movie</a>
</div>
